<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_marginTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/cardback"
    >

    <!--android:background="@drawable/card_bg"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp">
<!-- 标题-->
            <TextView
                android:id="@+id/news_title"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                 />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_title"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
<!-- 时间-->
                <TextView
                    android:id="@+id/display_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>
        <!-- 图片-->
 <ImageView
            android:id="@+id/post_iv"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="centerCrop" />
 <!-- 内容-->
        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="It\'s been so frustrating not being able to go topless when I\'m abroad, just in case someone\'s there with a camera."
            android:textSize="15sp" />

       


    </LinearLayout>

</android.support.v7.widget.CardView >

