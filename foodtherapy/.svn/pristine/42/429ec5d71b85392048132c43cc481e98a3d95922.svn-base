package ijiaban.foodtherapy.beans;

import java.io.Serializable;

import android.text.Html;
/**
 * 食品详情
 * http://api.yi18.net/food/show?id=1
 * @author Administrator
 *
 */
public class Food implements Serializable{

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private String name;//名称
	private String img;//图片
	private String menu;//疗效
	private String bar;//功能
	private int count;//浏览次数
	private long id;//食品id
	private int rcount;
	private int fcount;
	public int getRcount() {
		return rcount;
	}
	public void setRcount(int rcount) {
		this.rcount = rcount;
	}
	public int getFcount() {
		return fcount;
	}
	public void setFcount(int fcount) {
		this.fcount = fcount;
	}
	private String summary;//摘要
	private String detailText;//详情
	
	
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getImg() {
		return "http://www.yi18.net/"+img;
	}
	public void setImg(String img) {
		this.img = img;
	}
	public String getMenu() {
		return menu;
	}
	public void setMenu(String menu) {
		this.menu = menu;
	}
	public String getBar() {
		return bar;
	}
	public void setBar(String bar) {
		this.bar = bar;
	}
	 
	public int getCount() {
		return count;
	}
	public void setCount(int count) {
		this.count = count;
	}
	public long getId() {
		return id;
	}
	public void setId(long id) {
		this.id = id;
	}
	public String getSummary() {
		CharSequence ss=Html.fromHtml(summary);
		return ss.toString();
	}
	public void setSummary(String summary) {
		this.summary = summary;
	}
	public String getDetailText() {
		CharSequence ss=Html.fromHtml(summary);
		return ss.toString();
	}
	public void setDetailText(String detailText) {
		this.detailText = detailText;
	} 
	
}
